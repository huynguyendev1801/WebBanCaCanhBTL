@model WebBanCaCanh.Models.Product

@if (Model.IsVisible)
{
    <div class="col-md-3 my-3">
        <div class="card product-card" style="cursor: pointer;">
            <div class="img-container">
                @if (Model.ProductImages != null && Model.ProductImages.Count > 0)
                {
                    <img src="~/Content/Images/@Model.ProductImages.First().ImageUrl" class="card-img-top fixed-size-img" alt="@Model.ProductName" />
                }
                else
                {
                    <img src="~/Content/Images/placeholder.png" class="card-img-top fixed-size-img" alt="No Image Available" />
                }
                <div class="overlay" onclick="window.location.href='@Url.Action("Details", "Home", new { id = Model.ProductId })'">
                </div>
                <button class="product-search-button" data-bs-toggle="modal" data-bs-target="#productModal-@Model.ProductId"><i class="fas fa-search"></i></button>
            </div>
            <div class="card-body p-3">
                <p class="card-title product-name" onclick="window.location.href='@Url.Action("Details", "Home", new { id = Model.ProductId })'" title="@Model.ProductName">@Model.ProductName</p>
                <p class="card-text product-price">
                    <span class="new-price">@string.Format("{0:#,##0}đ", Model.Price)</span>
                </p>
                <a href="@Url.Action("Details", "Home", new { id = Model.ProductId })" class="btn-select">TÙY CHỌN</a>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="productModal-@Model.ProductId" tabindex="-1" aria-labelledby="productModalLabel-@Model.ProductId" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productModalLabel-@Model.ProductId">@Model.ProductName</h5>
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
                </div>
                <div class="modal-body">
                    @Html.Partial("_ProductDetailPartial", Model)
                </div>
            </div>
        </div>
    </div>
}
