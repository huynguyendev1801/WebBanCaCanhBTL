@model List<WebBanCaCanh.Models.OrderDetail>
@{
    ViewBag.Title = "Cart";
}

<div class="cart-container">
    <h2 class="cart-title">Giỏ hàng</h2>
    <div id="cartItems" class="cart-items">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Thao tác</th>
                        <th scope="col">Ảnh</th>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <form method="POST" action="@Url.Action("RemoveFromCart", "Home")">
                                    <input type="hidden" name="orderId" value="@item.OrderId">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <button type="submit" class="btn btn-link text-danger">X</button>
                                </form>
                            </td>
                            <td>
                                @{
                                    var firstImage = item.Product.ProductImages?.FirstOrDefault();
                                    var imageUrl = firstImage != null ? firstImage.ImageUrl : "placeholder.png";
                                }
                                <img src="/Content/Images/@imageUrl" alt="@item.Product.ProductName" class="cart-item-img img-thumbnail">
                            </td>
                            <td>
                                <p>@item.Product.ProductName</p>
                            </td>
                            <td>
                                <form method="POST" action="@Url.Action("UpdateCart", "Home")" class="quantity-form">
                                    <input type="hidden" name="orderId" value="@item.OrderDetailId">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <div class="input-group quantity-input-group">
                                        <button type="submit" name="action" value="decrease" class="btn btn-outline-secondary">-</button>
                                        <input type="text" name="quantity" class="form-control input-quantity" value="@item.Quantity" readonly>
                                        <button type="submit" name="action" value="increase" class="btn btn-outline-secondary">+</button>
                                    </div>
                                </form>
                            </td>
                            <td class="cart-item-total">@String.Format("{0:#,###}đ", item.UnitPrice * item.Quantity)</td>
                        </tr>
                    }
                    <tr class="cart-total-row">
                        <td colspan="4" class="text-right"><strong>Tổng tiền:</strong></td>
                        <td class="cart-total">@String.Format("{0:#,###}đ", Model.Sum(item => (item.UnitPrice * item.Quantity)))</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p>Không có sản phẩm trong giỏ hàng của bạn.</p>
        }
    </div>
    <div class="row justify-content-between align-items-center">
        <div class="col-auto">
            <a href="@Url.Action("Index", "Home")" class="btn btn-link cart-continue-shopping">Tiếp tục mua hàng</a>
        </div>
        <div class="col-auto">
            @if (Model != null && Model.Count > 0)
            {
                <a href="@Url.Action("Checkout", "Home")" class="btn btn-danger cart-checkout">Tiến hành đặt hàng</a>
            }
        </div>
    </div>
</div>
