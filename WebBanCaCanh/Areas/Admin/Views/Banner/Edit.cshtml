@model WebBanCaCanh.Models.Banner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<<h1 class="mt-5 text-center text-uppercase">Sửa Banner</h1>

@using (Html.BeginForm("Edit", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BannerId)
    @Html.HiddenFor(model => model.ImageUrl)
    @Html.HiddenFor(model => model.CreatedAt)
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            <input type="datetime-local" name="StartDate" class="form-control" />
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ngày kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            <input type="datetime-local" name="EndDate" class="form-control" />
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group my-2">
        <label for="imageFile">Ảnh Banner</label>
        <input type="file" name="imageFile" />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsVisible, "Hiển thị", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div>
                @Html.RadioButtonFor(model => model.IsVisible, true, new { id = "isVisibleTrue" })
                <label for="isVisibleTrue">Có</label>
            </div>
            <div>
                @Html.RadioButtonFor(model => model.IsVisible, false, new { id = "isVisibleFalse" })
                <label for="isVisibleFalse">Không</label>
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Trở về</a>
        </div>
    </div>
</div>
}
