@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-md bg-white fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "AdminHome", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Danh mục", "Index", "Category", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sản phẩm", "Index", "Product", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đơn hàng", "Index", "Order", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tin tức", "Index", "News", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Banner", "Index", "Banner", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Quản lý người dùng", "Index", "UsersAdmin", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <!-- Thêm các mục menu khác ở đây -->
                </ul>
                <div class="navbar-nav ml-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Xin chào <strong>@User.Identity.GetUserName()</strong>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">Đổi mật khẩu</a>
                                <div class="dropdown-divider"></div>
                                @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">Đăng xuất</button>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content py-3">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer class="footer bg-light pt-5 pb-3">
        <div class="container">
            <div class="row">
                <!-- About Us -->
                <div class="col-md-4 mb-3">
                    <h5>Về Chúng Tôi</h5>
                    <img src="~/Content/Images/logo-horizontal.png" alt="Huy Phúc Aquarium" class="mb-2" height="40">
                    <p>Shop cá cảnh Online Huy Phúc chuyên cung cấp các dòng cá cảnh thủy sinh, tép cảnh, cá cảnh nhập khẩu</p>
                    <p><i class="fas fa-map-marker-alt"></i> Địa chỉ: 57 Lê Thị Siêng, Tân Thông Hội, Củ Chi, Tp.HCM</p>
                    <p><i class="fas fa-clock"></i> Làm việc từ 8h - 10h30 sáng và 1h - 4h30 chiều</p>
                    <p><i class="fas fa-phone-alt"></i> Hotline: 0788859370</p>
                    <p><i class="fas fa-envelope"></i> Email: huyng.1801@gmail.com</p>
                </div>

                <!-- Customer Support -->
                <div class="col-md-2 mb-3">
                    <h5>Hỗ Trợ Khách Hàng</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Tra cứu đơn hàng</a></li>
                        <li><a href="#">Liên hệ</a></li>
                        <li><a href="#">Chính sách vận chuyển</a></li>
                    </ul>
                </div>

                <!-- Learn More -->
                <div class="col-md-3 mb-3">
                    <h5>Tìm Hiểu Thêm</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Sản phẩm</a></li>
                        <li><a href="#">Một số thành tích của trại</a></li>
                        <li><a href="#">Quy Mô Trang Trại</a></li>
                        <li><a href="#">Thông Tin Chung</a></li>
                    </ul>
                </div>

                <!-- Follow Us -->
                <div class="col-md-3 mb-3">
                    <h5>Theo Dõi Huy Phúc Tại</h5>
                    <p>Trại Cá Cảnh Huy Phúc</p>
                    <div class="social-icons">
                        <a href="#" class="text-dark"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-dark"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-dark"><i class="fab fa-zalo"></i></a>
                        <a href="#" class="text-dark"><i class="fab fa-tiktok"></i></a>
                        <a href="#" class="text-dark"><i class="fab fa-whatsapp"></i></a>
                    </div>
                    <img src="~/Content/Images/logo-da-thong-bao-bo-cong-thuong.webp" alt="Đã Thông Báo Bộ Công Thương" class="img-fluid mt-2">
                </div>
            </div>
        </div>
        <div class="container">
            <p>© Copyright belong to Huy Phuc Aquarium | Provided by Huy Phuc Dev Team</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
